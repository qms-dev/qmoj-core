<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.akina.qmoj.mapper.QmojQuestionSummaryMapper">
  <resultMap id="BaseResultMap" type="team.akina.qmoj.entity.QmojQuestionSummary">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="difficulty" jdbcType="TINYINT" property="difficulty" />
  </resultMap>
  <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="team.akina.qmoj.entity.QmojQuestionSummary">
    <result column="question_tags" jdbcType="LONGVARCHAR" property="topicTags" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, difficulty
  </sql>
  <sql id="Blob_Column_List">
    question_tags
  </sql>
  <select id="getAll" resultMap="ResultMapWithBLOBs">
    select 
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from qmoj_question
  </select>
</mapper>